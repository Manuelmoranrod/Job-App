doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        style
            include ../public/favoritos.css
        title JobApp
    body
        .container
            input.input(id="input_search", type="text", name="search")
            button.button(id="btn_search") Search
        .cards
        include ./menu-bar.pug

        



    script. 
        const input = document.querySelector('#input_search');
        const button = document.querySelector('#btn_search');
            
            button.addEventListener('click', () => {
                
                let newData = async () => { 
                    const apiData = await fetch(`/api/search?keyword=${input.value}`)//fetch a nuestra api
                    const data = await apiData.json();
                    console.log(data)
                    return data;
                }
                newData()//el click deberia llamar a la funcion
            })


